bg-image($url, $width, $height)
  display inline-block
  width $width
  height $height
  vertical-align middle
  background-image url("../../img/"+$url +"@2x.png")
  background-repeat no-repeat
  background-size $width $height
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("../../img/"+$url +"@3x.png")
    background-repeat no-repeat
    background-size $width $height
    display inline-block
    width $width
    height $height
    vertical-align middle

bg-image2($url)
  background-image url("../../img/"+$url +"@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("../../img/"+$url +"@3x.png")

bg-star($url)
  background-image url("../../img/star/"+$url +"@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("../../img/star/"+$url +"@3x.png")

border-1px($color)
  position relative
  border none
  &:after
    position absolute
    bottom 0
    left 0
    content ''
    width 100%
    height 1px
    transform scaleY(0.5)
    background $color
